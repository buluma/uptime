{
  "name": "repo-monitor-action",
  "version": "1.8.0",
  "repository": "https://github.com/buluma/repo-monitor-action.git",
  "author": "Florian Richter <floririchte@gmail.com>",
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsc --project tsconfig.prod.json",
    "release": "npx standard-version",
    "commit": "git add . && npx git-cz --disable-emoji",
    "test": "jest"
  },
  "jest": {
    "forceExit": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "coverageReporters": [
      "html",
      "text-summary",
      "json-summary"
    ],
    "setupFiles": [
      "./test/setupTests.ts"
    ],
    "preset": "ts-jest",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.dev.json"
      }
    }
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@types/react-dom": "^18.2.23",
    "dayjs": "^1.11.10",
    "js-yaml": "^4.1.1",
    "purgecss": "^6.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-vis": "^1.12.1",
    "tailwindcss": "^3.4.3"
  },
  "devDependencies": {
    "@testing-library/react": "^14.2.2",
    "@types/chart.js": "^2.9.41",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/react": "^18.2.73",
    "@types/react-vis": "^1.11.15",
    "jest": "^29.7.0",
    "jest-image-snapshot": "^6.4.0",
    "jsdom-screenshot": "^4.0.0",
    "react-test-renderer": "^18.2.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.3"
  }
}
